<%= erb :'header' %>
<div class="row">
  <div class="col-md-12">
    <h3 class="text-center">Place your bet</h3>
  </div>
</div>

<% if locals[:invalid_bet] %>
  <div class="row">
    <div class="col-md-12">
      <p class="text-center">You do not have enough to place that bet. Please try again.</p>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <p class="text-center">Your balance is <strong>$<%= @player.balance %></strong>.</p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
    <form action="/bet" method="post">
      <div class="form-group text-center">
        <div class="radio">
          <label>
            <input type="radio" name="bet" value="50" checked> $50
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="bet" value="100"> $100
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="bet" value="200"> $200
          </label>
        </div>

        <button type="submit" class="btn btn-primary">Place Bet</button>
      </div>
    </form>
    </div>
  </div>
</div>
