<h1>Sinatra Blackjack</h1>

<h2>Current Deck:</h2>
<p><%= @deck.cards %></p>
<h2>Number of cards left in deck:</h2>
<p><%= @deck.cards.length %></p>

<h2>Dealer's Hand:</h2>
<% @dealer.hand.each do |card| %>
<p><%= @deck.render(card) %></p>
<% end %>
<h3>Points:</h3>
<p><%= @deck.points(@dealer.hand) %></p>

<h2>Player's Hand:</h2>
<% @player.hand.each do |card| %>
<p><%= @deck.render(card) %></p>
<% end %>
<h3>Points:</h3>
<p><%= @deck.points(@player.hand) %></p>

<form action="/blackjack/hit" method="post">
  <input type="submit" value="HIT">
</form>

<form action="/blackjack/stay" method="get">
  <input type="submit" value="STAY">
</form>
