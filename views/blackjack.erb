<div class="container">
  <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <% if message %>
          <h2 class="text-center"><%= message %></h2>
        <% end %>
        <h2>Player: <%= player_hand %></h2>
        <h2>Cash Money: <%= bank_roll %></h2>
        <h2>Dealer: <%= dealer_hand %></h2>

        <div class="row">
          <form action="/bet" method="post" class="col-xs-8 col-xs-offset-2 form-inline">
            <input type="text" id="bet" name="bet" placeholder="Place your bet!" class="form-control">
            <input type="submit" class="btn-danger btn ">
          </form>
        </div>        
        <br>

      <div class="row">
        <form action="/hit" method="post" class="col-xs-4 col-xs-offset-2">
          <button type="submit" class="btn btn-default btn-block btn-warning">Hit!</button>
        </form>
        <form action="/stay" method="post" class="col-xs-4">
          <button type="submit" class="btn btn-default btn-block btn-info">Stay</button>
        </form>
        </div>

        <br>

        <div class="row">
        <form action="/blackjack" method="post" class="col-xs-8 col-xs-offset-2">
          <button type="submit" class="btn btn-default btn-block btn-success">Deal</button>
        </form>
      </div>
      </div>
    </div>
  </div>
</div>