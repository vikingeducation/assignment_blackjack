

<!doctype html>
<html>
  <head>
    <title>
      Black Jack
    </title>
  </head>

  <body>

  	<h1>Black Jack</h1>

    <p>Dealers Hand</p>

    <% if dealer.count == 2 %>

    <p><%= dealer.join("   ")[0] %></p>

    <% else %>
    <p><%= dealer.join("   ") %></p>

    <% end %>
    <br>
    <%  if bust?( @game.evaluate_cards( dealer )) %>
    <p>Busted</p>
    <% end %>
    <p>Player's Hand</p>
    <br>
    <p><%= player.join("   ") %></p>
    <br>
    <%  if bust?( @game.evaluate_cards( player )) %>
    <p>Busted</p>
    <% end %>
    <% if !bust?( @game.evaluate_cards( player )) %>
		<form action="/hit" method="post">
		  <br>
		  <input type="submit" name="move" value="Hit">
    </form>
    <form action="/stay" method="post">
      <input type="submit" name="move" value="Stay">
		</form>
    <% end %>

    <%  if bust?( @game.evaluate_cards( player ) )%>
    <br>
    <form action="/new_game" method="get">
      <input type="submit" name="new_game" value="New Game">
    </form>

    <% end %>



  </body>

</html>
