<%= erb :'header' %>

<h2>Current Deck:</h2>
<p><%= @blackjack.cards %></p>
<h2>Number of cards left in deck:</h2>
<p><%= @blackjack.cards.length %></p>

<h2>Dealer</h2>
<h3>Hand:</h3>
<% if @blackjack.round_over %>
  <% @dealer.hand.each do |card| %>
    <p><%= @blackjack.render(card) %></p>
  <% end %>
<% else %>
  <p>Hidden</p>
  <% @dealer.hand[1..-1].each do |card| %>
    <p><%= @blackjack.render(card) %></p>
  <% end %>
<% end %>
<h3>Points:</h3>
<% if @blackjack.round_over %>
  <p><%= @blackjack.points(@dealer.hand) %></p>
<% else %>
  <p><%= @blackjack.points(@dealer.hand[1..-1]) %></p>
<% end %>

<h2>Player</h2>
<h3>Bet: $<%= @player.bet %></h3>
<h3>Balance: $<%= @player.balance %></h3>
<h3>Hand:</h3>
<% @player.hand.each do |card| %>
<p><%= @blackjack.render(card) %></p>
<% end %>
<h3>Points:</h3>
<p><%= @blackjack.points(@player.hand) %></p>

<% unless @blackjack.round_over %>
  <form action="/blackjack/hit" method="post">
    <input type="submit" value="HIT">
  </form>

  <form action="/blackjack/stay" method="get">
    <input type="submit" value="STAY">
  </form>
<% else %>
  <h2>Round results</h2>
  <% case(@blackjack.round_winner) %>
  <% when :player %>
    <% if @blackjack.blackjack?(@player.hand) %>
      <p>The Player wins!! BLACKJACK!!</p>
    <% else %>
      <p>The Player wins!!</p>
    <% end %>
  <% when :dealer %>
    <% if @blackjack.blackjack?(@dealer.hand) %>
      <p>The Dealer wins!! BLACKJACK!!</p>
    <% else %>
      <p>The Dealer wins!!</p>
    <% end %>
  <% when :tie %>
    <p>It's a tie!!</p>
  <% end %>

  <form action="/bet" method="get">
    <input type="submit" value="Bet Again">
  </form>
  <form action="/" method="get">
    <input type="submit" value="Start Over">
  </form>
<% end %>
